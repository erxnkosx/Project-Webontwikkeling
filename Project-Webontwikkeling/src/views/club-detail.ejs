<%- include('partials/header', { title: club.name, page: 'clubs' }) %>

<section class="club-detail-card">
  <div class="club-hero">
    <div class="club-hero-logo-wrap">
      <img src="<%= club.logoUrl %>" alt="<%= club.name %>" class="detail-image" />
    </div>

    <div class="club-hero-content">
      <h1 class="club-detail-title"><%= club.name %></h1>

      <p class="club-detail-meta">
        <span><%= club.country %></span>
        <span class="dot">•</span>
        <span>Founded <%= club.foundedYear %></span>
      </p>

      <div class="club-chip-row">
        <span class="club-chip">
          <span class="chip-label">Stadium</span>
          <span class="chip-value"><%= club.stadium %></span>
        </span>
        <span class="club-chip">
          <span class="chip-label">Coach</span>
          <span class="chip-value"><%= club.coach %></span>
        </span>
        <span class="club-chip">
          <span class="chip-label">Total market value</span>
          <span class="chip-value">
            € <%= formatMarketValue(totalMarketValueEur) %>
          </span>
        </span>
      </div>
    </div>
  </div>

  <div class="club-players-section">
    <h2 class="detail-section-title">Players in this club</h2>

    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Starter</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% clubPlayers.forEach(p => { %>
            <tr>
              <td>
                <div class="player-cell">
                  <img src="<%= p.imageUrl %>" alt="<%= p.name %>" class="player-avatar" />
                  <span class="player-name"><%= p.name %></span>
                </div>
              </td>
              <td><%= p.position %></td>
              <td>
                <% if (p.isStarter) { %>
                  <span class="badge badge-yes">Yes</span>
                <% } else { %>
                  <span class="badge badge-no">No</span>
                <% } %>
              </td>
              <td>
                <a class="btn-link" href="/players/<%= p.id %>">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="profile-footer">
    <a class="btn-link" href="/clubs">&larr; Back to clubs</a>
  </div>
</section>

<%- include('partials/footer') %>
