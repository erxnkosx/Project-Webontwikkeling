<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Players</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="page">
      <header class="navbar">
        <div class="navbar-title">Football Admin</div>
        <nav class="nav-links">
          <a href="/">Home</a>
          <a href="/players">Players</a>
          <a href="/clubs">Clubs</a>
        </nav>
      </header>

      <h1>Players</h1>

      <div class="card">
        <form method="get" action="/players" class="search-bar">
          <input
            type="text"
            name="q"
            placeholder="Search by name"
            value="<%= q %>"
          />
          <button type="submit">Search</button>
        </form>

        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>
                  <a href="/players?sort=name&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Name
                  </a>
                </th>
                <th>
                  <a href="/players?sort=club&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Club
                  </a>
                </th>
                <th>
                  <a href="/players?sort=age&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Age
                  </a>
                </th>
                <th>
                  <a href="/players?sort=position&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Position
                  </a>
                </th>
                <th>
                  <a href="/players?sort=isBasisspeler&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Basisspeler
                  </a>
                </th>
                <th>
                  <a href="/players?sort=marketValueEur&order=<%= order === 'asc' ? 'desc' : 'asc' %>&q=<%= q %>">
                    Market value
                  </a>
                </th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% players.forEach(p => { %>
              <tr>
                <td><%= p.name %></td>
                <td><%= p.club?.name ?? "Unknown club" %></td>
                <td><%= p.age %></td>
                <td><%= p.position %></td>
                <td>
                  <% if (p.isBasisspeler) { %>
                    <span class="badge badge-yes">Yes</span>
                  <% } else { %>
                    <span class="badge badge-no">No</span>
                  <% } %>
                </td>
                <td>â‚¬ <%= formatMarketValue(p.marketValueEur) %></td>
                <td>
                  <a class="btn-link" href="/players/<%= p.id %>">View</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
