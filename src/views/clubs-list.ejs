<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Clubs</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="page">
      <header class="navbar">
        <div class="navbar-title">Football Admin</div>
        <nav class="nav-links">
          <a href="/">Home</a>
          <a href="/players">Players</a>
          <a href="/clubs">Clubs</a>
        </nav>
      </header>

      <h1>Clubs</h1>

      <div class="card">
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Stadium</th>
                <th>Founded</th>
                <th>Country</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% clubs.forEach(c => { %>
              <tr>
                <td><%= c.name %></td>
                <td><%= c.stadium %></td>
                <td><%= c.foundedYear %></td>
                <td><%= c.country %></td>
                <td><a class="btn-link" href="/clubs/<%= c.id %>">View</a></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
